<div class="max-w-2xl mx-auto p-4 bg-white shadow-md rounded-lg relative">
  <div class="absolute top-4 right-4">
    <%= render "favorite_button", meal: @meal %>
  </div>
  <h1 class="text-3xl font-bold mb-6 text-center pr-12"><%= @meal.name %></h1>

  <div class="mb-6">
    <div class="md:float-right w-full md:w-1/2 mb-4 md:mb-0 md:ml-6">
      <%= image_tag(@meal.image_url, alt: "#{@meal.name} image", class: "rounded-lg shadow-md w-full h-auto") %>
    </div>
    <div class="md:clear-left ">
      <p class="mb-4"><strong class="text-lg">Instructions:</strong> <%= @meal.instructions %></p>
    </div>
  </div>

  <div>
    <p class="mb-2 text-lg font-semibold">Ingredients:</p>
    <ul class="flex flex-wrap space-x-2 mb-4">
      <% @meal.ingridients.each do |k, v| %>
        <li class="border border-green-400 rounded p-2 whitespace-nowrap mb-2"><%= v %></li>
      <% end %>
    </ul>
  </div>

  <div class="text-right mb-4">
    <%= link_to 'Back to Home', meals_path, class: "bg-gradient-to-r from-blue-300 to-blue-500 hover:from-green-600 hover:to-blue-600 text-white font-semibold py-3 px-8 rounded-lg shadow-md hover:shadow-lg" %>
  </div>
</div>
