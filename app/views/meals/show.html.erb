<div class="max-w-2xl mx-auto p-4 bg-white shadow-md rounded-lg">
  <h1 class="text-3xl font-bold mb-6 text-center">Meal Details</h1>

  <div class="flex flex-col md:flex-row items-center mb-6">
    <div class="w-full md:w-1/2 mb-4 md:mb-0">
      <%= image_tag(@meal.image_url, alt: "#{@meal.name} image", class: "rounded-lg shadow-md w-full h-auto") %>
    </div>
    <div class="w-full md:w-1/2 md:pl-6">
      <p class="mb-4"><strong class="text-lg">Name:</strong> <%= @meal.name %></p>
      <p class="mb-4"><strong class="text-lg">Instructions:</strong> <%= @meal.instructions %></p>
    </div>
  </div>

  <div>
    <p class="mb-2 text-lg font-semibold">Ingredients:</p>
    <ul class="list-disc list-inside mb-4">
      <% @meal.ingridients.each do |k, v| %>
        <li><%= v %></li>
      <% end %>
    </ul>
  </div>

  <div class="text-center">
    <%= link_to 'Back to Meals', meals_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>
